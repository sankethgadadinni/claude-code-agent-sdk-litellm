# Copy this file to `.env`, fill in the values, and source it before
# starting LiteLLM or the Claude Agent SDK demo script.

# LiteLLM master key (also used as the Anthropic API key)
LITELLM_MASTER_KEY="replace-with-strong-shared-secret"

# Azure OpenAI resource settings used by config.yaml
AZURE_API_BASE="https://your-azure-resource.openai.azure.com"
AZURE_API_KEY="replace-with-azure-api-key"

# Optional: Gemini API key if you switch to config_with_gemini.yaml
GEMINI_API_KEY="replace-with-google-ai-studio-key"

# Claude Agent SDK talks to LiteLLM through Anthropic-compatible vars
ANTHROPIC_BASE_URL="http://localhost:4000"
ANTHROPIC_API_KEY="$LITELLM_MASTER_KEY"
